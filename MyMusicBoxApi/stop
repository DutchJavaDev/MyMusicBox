#!/bin/bash

if [ -f go_program.pid ]; then
    PID=$(cat go_program.pid)
    echo "Killing process with PID $PID"
    sudo kill "$PID"
    rm -f go_program.pid
else
    echo "PID file not found. Process might not be running or already terminated."
fi

## kill dev database
cd ..
cd dev_database
sudo docker compose down